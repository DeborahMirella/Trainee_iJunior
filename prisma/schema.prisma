generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


enum TipoPrivilegio {
  comum
  premium
  admin
}

model usuarios {
  id          Int             @id @default(autoincrement())
  nome        String
  email       String          @unique
  senha       String
  foto        String?
  privilegios TipoPrivilegio  @default(comum)

  reproduções reproduções[]
}

model artistas {
  id             Int       @id @default(autoincrement())
  nome           String
  foto           String?
  numero_streams Int       @default(0)

  musicas        musicas[]
}

model musicas {
  id         Int       @id @default(autoincrement())
  nome       String
  genero     String?
  album      String?
  artista_id Int
  artistas   artistas  @relation(fields: [artista_id], references: [id])

  reproduções reproduções[]
}

model reproduções {
  usuario_id   Int
  musica_id    Int
  data_escuta  DateTime

  usuarios     usuarios @relation(fields: [usuario_id], references: [id])
  musicas      musicas  @relation(fields: [musica_id], references: [id])

  @@id([usuario_id, musica_id, data_escuta])
}