// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum TipoPrivilegio {
  comum
  premium
  admin
}

model usuarios {
  id          Int            @id @default(autoincrement())
  nome        String
  email       String         @unique
  senha       String
  foto        String?
  privilegios TipoPrivilegio @default(comum)
  reproducoes Reproducao[]
  @@map("usuarios")
}

model artistas {
  id             Int     @id @default(autoincrement())
  nome           String
  // Corrigido: foto deve ser opcional para corresponder à sua planta original.
  foto           String?
  numero_streams Int     @default(0)
  // Corrigido: A relação deve apontar para o modelo 'musicas'.
  musicas        musicas[]
  @@map("artistas")
}

model musicas {
  id        Int     @id @default(autoincrement())
  nome      String
  genero    String?
  album     String?
  artistaId Int
  // Corrigido: A relação deve apontar para o modelo 'artistas'.
  artista   artistas @relation(fields: [artistaId], references: [id])
  reproducoes Reproducao[]
  @@map("musicas")
}

model Reproducao {
  data_escuta DateTime @default(now())
  usuarioId   Int
  musicaId    Int
  // Corrigido: As relações devem apontar para os modelos 'usuarios' e 'musicas'.
  usuario     usuarios @relation(fields: [usuarioId], references: [id])
  musica      musicas  @relation(fields: [musicaId], references: [id])
  @@id([usuarioId, musicaId, data_escuta])
  @@map("reproducoes")
}