generator client {
  provider = "prisma-client-js"
  output   = "@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TipoPrivilegio {

  comum
  premium
  admin
  
}
model Usuario {
 
  id         Int         @id @default(autoincrement())
  nome       String
  email      String      @unique
  senha      String
  foto       String?

privilegios TipoPrivilegio @default(comum)

reproducoes Reproducao[]
@@map("usuarios")

}

model Artista {

  id                       Int     @id @default(autoincrement())
  nome                     String 
  foto                     String?
  numero_streams           Int     @default(0)
  musicas Musica[]         
  @@map("artistas")

}

model Musica {

  id          Int     @id @default(autoincrement())
  nome        String
  genero      String?
  album       String?
  artistaId   Int
  artista     Artista @relation(fields: [artistaId], references: [id])
  reproducoes Reproducao[]
  @@map("musicas")

}

model Reproducao {

  data_escuta DateTime @default(now())
  usuarioId Int
  musicaId  Int
  usuario   Usuario @relation(fields: [usuarioId], references: [id])
  musica    Musica   @relation(fields: [musicaId], references: [id])
  @@id([usuarioId, musicaId, data_escuta])
  @@map("reproducoes")
}



