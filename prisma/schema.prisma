generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum TipoPrivilegio {
  comum
  premium
  admin
}

model usuarios {
  id          Int            @id @default(autoincrement())
  nome        String
  email       String         @unique
  senha       String
  foto        String?
  privilegios TipoPrivilegio @default(comum)
  reproducoes Reproducao[]
  @@map("usuarios")
}

model artistas {
  id             Int      @id @default(autoincrement())
  nome           String   @unique
  foto           String?
  numero_streams Int      @default(0)
  musicas        musicas[]
  @@map("artistas")
}

model musicas {
  id        Int     @id @default(autoincrement())
  nome      String
  genero    String?
  album     String?
  artistaId Int
  artista   artistas @relation(fields: [artistaId], references: [id])
  reproducoes Reproducao[]
  @@map("musicas")
}

model Reproducao {
  data_escuta DateTime @default(now())
  usuarioId   Int
  musicaId    Int
  usuario     usuarios @relation(fields: [usuarioId], references: [id])
  musica      musicas  @relation(fields: [musicaId], references: [id])
  @@id([usuarioId, musicaId, data_escuta])
  @@map("reproducoes")
}